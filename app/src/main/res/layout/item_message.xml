 <!-- res/layout/item_message.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">

    <!-- Mensaje recibido -->
    <LinearLayout
        android:id="@+id/layoutReceivedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/message_background"
        android:padding="8dp"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/textReceivedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensaje recibido"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/textReceivedTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:34 PM"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="start"/>
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <!-- Mensaje enviado -->
    <LinearLayout
        android:id="@+id/layoutSentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/message_send"
        android:padding="8dp"
        android:paddingRight="3dp"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/textSentMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensaje enviado"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textSentTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:34 PM"
            android:textSize="10sp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@android:color/darker_gray"/>

</LinearLayout>
