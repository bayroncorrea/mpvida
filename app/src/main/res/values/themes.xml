<resources xmlns:itemapp="http://schemas.android.com/apk/res-auto">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0288D1</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">#0288D1</item>
        <item name="android:navigationBarColor">#0288D1</item>
    </style>

    <style name="MyOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#0288D1</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
    </style>

    <style name="CustomHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>