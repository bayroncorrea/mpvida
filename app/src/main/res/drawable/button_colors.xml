<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#8202D1"/>
            <corners android:radius="40dp"/><!-- Color al presionar -->
        </shape>
    </item>

    <!-- Estado seleccionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#F57C00"/> <!-- Color cuando estÃ¡ seleccionado -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#006EEC"
                android:endColor="#00FFD8"
                android:angle="45"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>


</selector>
